{
  "name": "botweaver",
  "version": "1.0.0",
  "description": "Secure self-hosted Discord bot builder - completely open source and Discord ToS compliant",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "discord",
    "bot",
    "builder",
    "no-code",
    "self-hosted",
    "secure",
    "open-source",
    "discord-tos-compliant",
    "botweaver"
  ],
  "author": "BotWeaver Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bayeggex/BotWeaver.git"
  },
  "homepage": "https://github.com/bayeggex/BotWeaver"
}
